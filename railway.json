{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"]
    },
    "rootDirectory": "backend"
  },
  "deploy": {
    "startCommand": "gunicorn app:app --workers 2 --threads 4 --timeout 180 --bind 0.0.0.0:$PORT",
    "healthcheckPath": "/healthz",
    "restartPolicyType": "ON_FAILURE"
  }
}
