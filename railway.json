{
  "$schema": "https://railway.app/railway.schema.json",
  "build": { "builder": "NIXPACKS", "nixpacksPlan": { "providers": ["python"] } },
  "deploy": {
    "startCommand": "PYTHONPATH=/app/backend gunicorn backend.app:app --chdir backend --workers 2 --threads 4 --timeout 180 --bind 0.0.0.0:$PORT",
    "healthcheckPath": "/healthz",
    "restartPolicyType": "ON_FAILURE"
  }
}
